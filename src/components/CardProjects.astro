---
const { title, image, repo, description } = Astro.props;
---

<a href={repo} target="_blank">
  <div
    class="border border-purple-600 overflow-hidden max-w-[20rem] rounded-md"
  >
    <div class="overflow-hidden">
      <img
        class="w-auto max-w-[20rem] overflow-hidden hover:scale-125 transition-all"
        src={image}
        alt=""
      />
    </div>
    <div class="flex justify-between items-center w-full py-2 px-1">
      <div class="flex flex-col gap-2">
        <h6 class="w-fit dark:text-white">{title}</h6>
        <span class="dark:text-slate-400 text-sm">{description}</span>
      </div>
    </div>
  </div>
</a>
